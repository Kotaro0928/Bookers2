<div class="container">
  <div class="row">
    <%= render 'users/user_info', user: @user, book: @book_new %>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <% if @book.user_id == current_user.id %>
  		      <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
                <br>
                <%= link_to user_path(@user) do%>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-sm btn-danger" %>
              </td>
            </tr>
            <% else %>
              <tr>
                <td>
                  <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                  <br>
                  <%= link_to user_path(@user) do%>
                    <%= @user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td><%= @book.body %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>