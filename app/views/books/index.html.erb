<div class="container px-5 px-sm-0">
  <div class="text-danger">
  <% if @book_new.errors.any? %>
    <h3><%= @book_new.errors.count %> errors prohibited this obj from being saved:</h3>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li></br>
    <% end %>
  <% end %>
  </div>
  <div class="row">
    <%= render 'users/user_info', user: @user, book: @book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% @books.each do |book| %>
              <% if user.id == book.user_id %>
                <tr>
                  <td>
                    <%= link_to user_path(user) do %>
                      <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(book) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>